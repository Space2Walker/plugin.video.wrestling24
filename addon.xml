<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.wrestling24"
version="0.0.2"
name="Wrestling 24"
provider-name="Lord Grey">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
  <import addon="script.module.beautifulsoup4" version="4.3.2"/>
  <import addon="script.module.urlresolver" version="5.0.22"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Watch all the WWE related stuff!!</summary>
  <description lang="en_GB">An example video plugin for Kodi mediacenter.</description>
  <disclaimer lang="en_GB">Non of the content is hosted by me. This addon only scrapps watchwrestling24.net for links.</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshot-01.jpg</screenshot>
    <screenshot>resources\screenshot-02.jpg</screenshot>
    <screenshot>resources\screenshot-03.jpg</screenshot>    
  </assets>
  <news>Updated with latest artwork metadata</news>
</extension>
</addon>
